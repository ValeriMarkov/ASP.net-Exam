@model Car

<form asp-controller="Home" asp-action="EditCar">
    <input asp-for="Id" hidden />

    <label asp-for="PersonName"></label>
    <input class="form-control" asp-for="PersonName" />

    <label asp-for="CarBrand"></label>
    <input class="form-control" asp-for="CarBrand" />

    <label asp-for="LicensePlate"></label>
    <input class="form-control" asp-for="LicensePlate" />

    <br />
    <button class="btn btn-primary">Edit car</button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Delete car</button>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Do you confirm deletion of car?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="deleteCar()" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


<script>
    const deleteCar = () => {
        window.location = `/Home/DeleteCar/${@Model.Id}`
    }
</script>